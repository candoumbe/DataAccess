    </Otherwise>
  </Choose>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Candoumbe.DataAccess.EFCore\Candoumbe.DataAccess.EFStore.csproj" />
  </ItemGroup>

</Project>
